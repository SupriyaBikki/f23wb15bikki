extends layout

block content
  h1= title
  p Query Parameters are:
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  p Rows are : #{rows}
  p Columns are : #{cols}

  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Please enter only integers for rows and columns.
  - else if (rows < 1 || rows > 10 || cols < 1 || cols > 10)
    p Rows and columns must be between 1 and 10.
  - else
    - function computeCell(row, col) 
      if (row === col)
        return 1;
      else if (row === col - 1)
        return 2;
      else if (row === col + 1)
        return row;
      else
        return 0;

    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            td= computeCell(i, j)
